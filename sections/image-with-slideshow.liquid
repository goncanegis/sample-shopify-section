{% stylesheet %}
.image-with-slider {
    display: flex;
  flex-wrap: wrap;
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
}
.main-page-layout {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  max-width: 100vw;
}
 .main-page-left, .main-page-right {
  display: flex;
  flex-direction: column;
  width: 50%;
}
.main-page-left {
 position: relative;
}
.main-page-right{
  padding: 106px 0 106px 120px;
}
.main-page-right h1 {
  font-size: calc(var(--font-heading-scale) * 2.675rem);
  margin-bottom: 1rem;
  max-width: 494px;
}
.section-description{
  max-width: 494px;
 color: #666666;
  margin-top: 0;
  margin-bottom: 2rem;
  font-size: 16px;
  line-height: 25.6px;
} 
.shop-all-link {
  font-size: 13px;
  font-weight: 600;
  text-underline-offset: 6px;
  color: #000;
  margin-bottom: 68px;
}
.main-page-left img {
  max-width: 720px;
  max-height: 864px;
  object-fit: cover;
}

.product-slider {
display: flex;
width: 100%;
max-width: 720px;
position: relative;
}

.swiper {
  width: 100%;
  height: 100%;
}

      .swiper-slide {
        text-align: center;
        font-size: 18px;
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        flex-direction: column;
        justify-content: start;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
      }

      .swiper-slide img {
        display: flex;
        width: 100%;
        object-fit: cover;
      }
.swiper-button-next, .swiper-button-prev {
    display: flex !important;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    margin-top: 0;
    z-index: 10;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(0, 0, 0, 0.1);
    color: #000;
}
.swiper-button-next:after, .swiper-button-prev:after {
    font-size: 12px;
}
  .slider-link {
  display: flex;
  flex-direction: column;
  text-decoration: none;
  margin-bottom: 0 !important;
  color: #000;
  }
  .product-title {
  font-size: 13px;
  font-weight: 400;
  width: 100%;
  text-align: start;
  color: #000;
  }
.product-details {
width: 100%;
height: 40px;
display: flex;
justify-content: space-between;
align-items: center;
}
.product-colors {
display: flex;
align-items: center;
width: 50%;
justify-content: flex-end;
}


.product-color {
display: block !important;
margin-right: 8px;
border: none;
border-radius: 50%;
position: relative;
width: 12px;
height: 12px;
}
.product-color.active {
width: 6px;
height: 6px;
}
.product-color.active::after {
content: '';
position: absolute;
z-index: 0;
top: 50%;
left: 50%;
transform: translate(-50%, -50%);
border-radius: 50%;
width: 6px;
height: 6px;
outline: 1px solid black; 
outline-offset: 2px;
}

.product-color:last-child {
  margin-right: 0;
}

.product-color:nth-child(1) {
  background-color: #99C3CC;
}

.product-color:nth-child(2) {
background-color: #CC9999;
}

.product-color:nth-child(3) {
background-color: #CB99CC;
}

.product-color:nth-child(4) {
background-color: #A6CC99;
}

.product-price {
  font-weight: 500;
  font-size: 12.8px;
}

@media screen and (min-width: 1440px) {
  .main-page-right {
    padding: 106px 0 106px 106px;
}
}

@media screen and (max-width: 1260px) {
  .main-page-right {
    padding: 106px 0 106px 106px;
}
}

@media screen and (max-width: 900px) {
 .main-page-right {
    padding: 90px 0 90px 90px;
}
.main-page-right h1 {
    font-size: calc(var(--font-heading-scale) * 2.25rem);
}
.section-description {
font-size: 14px;
}
}

@media screen and (max-width: 768px) {
.main-page-right {
    padding: 70px 0 70px 70px;
}
}

@media screen and (max-width: 684px) {
.main-page-layout {
    flex-direction: column;
}
.main-page-left, .main-page-right {
width: 100%;
}
.main-page-right {
z-index: 2;
    padding: 0 0 4rem 4rem;
    margin-top: -392px;
}
.section-heading h1 {
  color: #fff;
}
.mobile-gradient-bg {
z-index: 0;
  display: flex !important;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, #000000 78.65%);
opacity: 0.5;
}
.section-description {
  color: #fff;
}
.shop-all-link {
  color: #fff;
}
}



{% endstylesheet %}

{% javascript %}
var mySwiper = new Swiper('.mySwiper', {
  navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
  },
  spaceBetween: 30,
  slidesPerView: 2.5,
});
{% endjavascript %}
   


{% schema %}
{
  "name": "image with slideshow",
  "settings": [
    {
      "type": "text",
      "label": "your headline for this section",
      "id": "heading"
    },
    {
      "type": "richtext",
      "label": "your description",
      "id": "description"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "image block",
      "settings": [
        {
          "type": "image_picker",
          "label": "your image",
          "id": "image"
        }
      ]
    },
    {
      "type": "slide",
      "name": "t:sections.slideshow.blocks.slide.name",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.slideshow.blocks.slide.settings.image.label"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Image slide",
          "label": "t:sections.slideshow.blocks.slide.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.all.heading_size.options__3.label"
            }
          ],
